{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://adaptive-workflow.local/schemas/workflow-config.schema.json",
  "title": "Workflow Configuration Schema",
  "description": "Schema for workflow configuration files",
  "type": "object",
  "required": ["name", "version", "phases"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Workflow name"
    },
    "version": {
      "type": "string",
      "description": "Workflow version"
    },
    "phases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of workflow phases"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    }
  }
}
