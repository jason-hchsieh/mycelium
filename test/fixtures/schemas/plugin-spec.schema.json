{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://adaptive-workflow.local/schemas/plugin-spec.schema.json",
  "title": "Plugin Specification Schema",
  "description": "Schema for plugin.json files",
  "type": "object",
  "required": ["name", "version"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Plugin name"
    },
    "version": {
      "type": "string",
      "description": "Plugin version"
    },
    "description": {
      "type": "string",
      "description": "Plugin description"
    },
    "author": {
      "type": "string",
      "description": "Plugin author"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of skills"
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of agents"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of commands"
    }
  }
}
