{
  "SessionStart": [
    {
      "type": "command",
      "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session-start.sh",
      "timeout": 30,
      "description": "Load project context and discover capabilities on session start"
    }
  ],
  "Stop": [
    {
      "type": "command",
      "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/save-state.sh",
      "timeout": 10,
      "description": "Save session state on stop"
    }
  ]
}
